<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ViewSlideImage">

    <androidx.viewpager.widget.ViewPager
        android:transitionName="transition"
        android:id="@+id/vpSliderImage"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#4D4D4D"
        android:orientation="horizontal">

        <ImageView
            android:clickable="true"
            android:id="@+id/taiAnh"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/taianh" />

        <ImageView
            android:clickable="true"
            android:id="@+id/datLamHinhNen"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/anhnen" />

        <ImageView
            android:clickable="true"
            android:id="@+id/chiase"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/chiase" />
    </LinearLayout>

</LinearLayout>